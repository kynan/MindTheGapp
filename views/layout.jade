!!!
html
  head
    title #{title}
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css')
    style
      body {
       padding-top: 60px;
      }

  body
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          a(href='/').brand #{brand}
          ul.nav
            - var obj = { 'home':'Home', 'source':'Source' }
              - each val, key in obj
                - if (id == key)
                  li.active
                    a(href='#{key}') #{val}
                - else
                  li
                    a(href='#{key}') #{val}

    div.container
      block content
